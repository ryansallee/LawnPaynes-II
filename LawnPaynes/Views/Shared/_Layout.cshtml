@*Sharedview for the Home Views*@

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
     @*The format detection will ensure Edge does not try to allow the telephone number to launch Skype or other phone programs*@ 
    <meta name="format-detection" content="telephone=no">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#218021">
     @*CSS stylesheets for the shared partial view. Render Section is used so that View-specific sheets can be used*@ 
    <link rel="stylesheet" href="@Url.Content("https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Styles/basestyles.css")" />
    @RenderSection("Styles", false)
     @*This is the reference to use the Fjalla One font for <h1> and <h3> tags that contain the name of the business*@   
    <link href="@Url.Content("https://fonts.googleapis.com/css?family=Fjalla+One")" rel="stylesheet">

</head>
<body>
    <div class="wrapper">
         @*Header with nav bar.*@ 
        <header>
            <nav class="navbar navbar-expand-xl navbar-custom">
                <h1 class="navbar-brand">@Html.ActionLink("Lawn Paynes", "Index", "Home")</h1>
