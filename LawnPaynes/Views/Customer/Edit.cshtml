@model LawnPaynes.ViewModels.CustomerEditViewModel

@{
    ViewBag.Title = "Edit Customer: " + Model.Customer.Name;
}

<h2 class="text-center">@ViewBag.Title</h2>
<br />
@using (Html.BeginForm())
{
    @Html.Partial("_CustomerForm")

    <br />
    <div class="container col-12 col-md-8 text-white text-center">
        <div class="row justify-content-center">
            <div class="pad-top">
                <button type="submit" class="btn btn-success btn-lg ">
                    <span class="glyphicon glyphicon-save"></span> Save
                </button>
                @Html.ActionLink("Cancel", "Detail", new { id = Model.Id }, new { @class = "btn btn-danger btn-lg" })
                @Html.ActionLink("Customer List", "Index", null, new { @class = "btn btn-primary btn-lg" })

            </div>
        </div>
    </div>
}
