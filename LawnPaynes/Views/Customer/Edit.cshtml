@model LawnPaynes.ViewModels.CustomerEditViewModel

@{
    ViewBag.Title = "Edit Customer";
}

<h2>Customer.Name</h2>

@using (Html.BeginForm())
{
    @Html.Partial("_CustomerForm")

    <div class="row">
        <div class="col-md-12">
            <div class="pad-top">
                <button type="submit" class="btn btn-success btn-lg margin-right">
                    <span class="glyphicon glyphicon-save"></span> Save
                </button>
                @Html.ActionLink("Detail", "Detail", new { id = Model.Id }, new { @class = "btn btn-primary btn-lg margin-right" })
                @Html.ActionLink("Cancel", "Index", null,  new { @class = "btn btn-danger btn-lg margin-right" })

            </div>
        </div>
    </div>
}
