@model LawnPaynes.ViewModels.CustomerEditViewModel

@{
    ViewBag.Title = "Edit Customer: " + Model.Customer.Name;
}

<h2 class="text-center">@ViewBag.Title</h2>
<br />
@using (Html.BeginForm())
{
    <div class="container">
        <div class="form-group row justify-content-center">
            <div class="col-10 col-sm-8 col-lg-6">
                @Html.ValidationSummary("Please correct the following errors:", new { @class = "alert alert-danger" })
            </div>
        </div>
    </div>
    @Html.Partial("_CustomerForm")

    <br />
    <div class="container">
        <div class="row text-center">
            <div class="col-12">
                <div class="pad-top">
                    <button type="submit" class="btn btn-success btn-lg mr-2 ">
                        <span class="glyphicon glyphicon-save"></span> Save
                    </button>
                    @Html.ActionLink("Cancel", "Detail", new { id = Model.Id }, new { @class = "btn btn-danger btn-lg mr-2" })
                    @Html.ActionLink("Customer List", "Index", null, new { @class = "btn btn-primary btn-lg" })

                </div>
            </div>
        </div>
    </div>
}
