@model LawnPaynes.Models.Customer
    

@{
    ViewBag.Title = "Customer Detail: " + Model.Name;
}

<h2 class="text-center">@Model.Name</h2>

<div class="container col-11 col-md-6 text-white text-center">
    <div class="row justify-content-center bg-success ">
        <div class="col-6">
            <h5>
                @Html.LabelFor(m => m.Name):
            </h5>
        </div>
        <div class="col-6">
            <h5>
                @Model.Name
            </h5>
        </div>
    </div>


    @{
        if (Model.IsNew)
        {
            <div class="row justify-content-center bg-danger ">
                <div class="col-6">
                    <h5>
                        @Html.LabelFor(m => m.IsNew):
                    </h5>
                </div>
                <div class="col-6">
                    <h5>
                        Yes
                    </h5>
                </div>
            </div>
        }
        else
        {

            <div class="row justify-content-center bg-success ">
                <div class="col-6">
                    <h5>
                        @Html.LabelFor(m => m.IsNew):
                    </h5>
                </div>
                <div class="col-6">
                    <h5>
                        No
                    </h5>
                </div>
            </div>
        }
    }

    <div class="row justify-content-center bg-success ">
        <div class="col-6">
            <h5>
                @Html.LabelFor(m => m.Email):
            </h5>
        </div>
        <div class="col-6">
            <h5>
                @Model.Email
            </h5>
        </div>
    </div>

    <div class="row justify-content-center bg-success ">
        <div class="col-6">
            <h5>
                @Html.LabelFor(m => m.PhoneNumber):
            </h5>
        </div>
        <div class="col-6">
            <h5>
                @Model.PhoneNumber
            </h5>
        </div>
    </div>
</div>

<div class="container col-11 col-md-8" >
    <div class="row justify-content-center pad-top">
    @foreach (var customerLocation in Model.CustomerLocations)
    {
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title"> Address </h5>

                <p class="card-text">@customerLocation.Address</p>
                @{ 
                    var customerLocationAddress = customerLocation.Address;
                    var customerLocationID = customerLocation.CustomerLocationId;
                }

                @foreach(var locationService in customerLocation.Services)
                {
                   <p class="card-text"> @locationService.ServiceName </p>
                }

                @Html.ActionLink("Edit", "Edit", "CustomerLocation", new { id = customerLocation.CustomerLocationId }, new { @class = "btn btn-primary btn-lg margin-right" })

                <a data-toggle="modal" href="#deleteCustomerLocationModal+@customerLocation.CustomerLocationId" class="btn btn-danger btn-lg margin-right">Delete</a>
                <div class="modal" id="deleteCustomerLocationModal+@customerLocation.CustomerLocationId" tabindex="-1" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            @using (Html.BeginForm("Delete", "CustomerLocation", new { id = customerLocation.CustomerLocationId, customerId =customerLocation.CustomerId }))
                            {
                                <input type="hidden" value="@customerLocation.CustomerLocationId" name="Id" />
                                <div class="modal-header">
                                    <h4 class="modal-title">Delete @customerLocation.Address?</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <div class="modal-body">
                                    Are you sure you want to delete this address? It cannot be restored to the customer List.
                                </div>

                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-danger">Delete </button>
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel and Return to Customer Detail</button>
                                </div>
                             }
                        </div>
                    </div>
                </div>

            </div>
        </div>
     }
    </div>
</div>

<div class="container col-11 col-md-6 text-white text-center">
    <div class="row justify-content-center">
        <div class="pad-top">
            @Html.ActionLink("Edit Customer", "Edit", new { id = Model.CustomerId }, new { @class = "btn btn-primary btn-lg margin-right" })
            @Html.ActionLink("Customer List", "Index", null, new { @class = "btn btn-primary btn-lg margin-right" })
            @Html.ActionLink("Add Address", "Add", "CustomerLocation", new { customerId = Model.CustomerId }, new { @class = "btn btn-primary btn-lg margin-right" })
        </div>
        </div>
    </div>

