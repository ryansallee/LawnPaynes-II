@model LawnPaynes.Models.Customer


@{
    ViewBag.Title = "Customer Detail: " + Model.Name;
}

<h2 class="text-center">@Model.Name</h2>

<div class="container col-11 col-md-6 text-white text-center">
    <div class="row justify-content-center bg-success ">
        <div class="col-6">
            <h5>
                @Html.LabelFor(m => m.Name):
            </h5>
        </div>
        <div class="col-6">
            <h5>
                @Model.Name
            </h5>
        </div>
    </div>


    @{
        if (Model.IsNew)
        {
            <div class="row justify-content-center bg-danger ">
                <div class="col-6">
                    <h5>
                        @Html.LabelFor(m => m.IsNew):
                    </h5>
                </div>
                <div class="col-6">
                    <h5>
                        Yes
                    </h5>
                </div>
            </div>
        }
        else
        {

            <div class="row justify-content-center bg-success ">
                <div class="col-6">
                    <h5>
                        @Html.LabelFor(m => m.IsNew):
                    </h5>
                </div>
                <div class="col-6">
                    <h5>
                        No
                    </h5>
                </div>
            </div>
        }
    }

    <div class="row justify-content-center bg-success ">
        <div class="col-6">
            <h5>
                @Html.LabelFor(m => m.Email):
            </h5>
        </div>
        <div class="col-6">
            <h5>
                @Model.Email
            </h5>
        </div>
    </div>

    <div class="row justify-content-center bg-success ">
        <div class="col-6">
            <h5>
                @Html.LabelFor(m => m.PhoneNumber):
            </h5>
        </div>
        <div class="col-6">
            <h5>
                @Model.PhoneNumber
            </h5>
        </div>
    </div>

    <div class="row justify-content-center bg-success ">
        <div class="col-6">
            <h5>
                @Html.LabelFor(m => m.Comments):
            </h5>
        </div>
        <div class="col-6">
            <h5>
                @Model.Comments
            </h5>
        </div>
    </div>

</div>

<div class="container col-11 col-md-8">
    <div class="row justify-content-center pad-top">
        @foreach (var customerLocation in Model.CustomerLocations)
        {
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title"> Location &amp Services </h5>

                    <p class="card-text">@customerLocation.Address</p>

                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th>Service</th>
                                <th>Delete?</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var locationService in customerLocation.ServiceCustomerLocations)
                            {
                                <tr>
                                    <td>@locationService.Service.ServiceName</td>
                                    <td>
                                        <a data-toggle="modal" href="#deleteServiceCustomerLocationModal+@locationService.ServiceId+@locationService.CustomerLocationId" class="btn btn-danger btn-sm margin-right">Delete Service</a>
                                        <div class="modal" id="deleteServiceCustomerLocationModal+@locationService.ServiceId+@locationService.CustomerLocationId" tabindex="-1" role="dialog">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    @using (Html.BeginForm("Delete", "ServiceCustomerLocation", new { customerLocationId = locationService.CustomerLocationId, serviceId = locationService.ServiceId, customerId = Model.CustomerId }))
                                                    {
                                                        <div class="modal-header">
                                                            <h4 class="modal-title">Remove @locationService.Service.ServiceName from @locationService.CustomerLocation.Address?</h4>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>

                                                        <div class="modal-body">
                                                            Are you sure you want to remove @locationService.Service.ServiceName from this location? This service will have to be added to the location again.
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-danger">Delete </button>
                                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel and Return to Customer Detail</button>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @Html.ActionLink("Edit Location", "Edit", "CustomerLocation", new { id = customerLocation.CustomerLocationId }, new { @class = "btn btn-primary margin-right" })

                    <a data-toggle="modal" href="#deleteCustomerLocationModal+@customerLocation.CustomerLocationId" class="btn btn-danger margin-right">Delete Location</a>
                    <div class="modal" id="deleteCustomerLocationModal+@customerLocation.CustomerLocationId" tabindex="-1" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                @using (Html.BeginForm("Delete", "CustomerLocation", new { id = customerLocation.CustomerLocationId, customerId = customerLocation.CustomerId }))
                                {
                                    <div class="modal-header">
                                        <h4 class="modal-title">Delete @customerLocation.Address?</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>

                                    <div class="modal-body">
                                        Are you sure you want to delete this address? It cannot be restored to the customer.
                                    </div>

                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-danger">Delete </button>
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel and Return to Customer Detail</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>

<div class="container col-11 col-md-6 text-white text-center">
    <div class="row justify-content-center">
        <div class="pad-top">
            @Html.ActionLink("Edit Customer", "Edit", new { id = Model.CustomerId }, new { @class = "btn btn-primary btn-lg margin-right" })
            @Html.ActionLink("Customer List", "Index", null, new { @class = "btn btn-primary btn-lg margin-right" })
            @Html.ActionLink("Add Address", "Add", "CustomerLocation", new { customerId = Model.CustomerId }, new { @class = "btn btn-primary btn-lg margin-right" })
        </div>
    </div>
</div>

