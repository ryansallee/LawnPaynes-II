@model List<LawnPaynes.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<h2>@ViewBag.Title</h2>

<div>
    <@Html.ActionLink("Add Customer", "Add", null, new { @class = "btn btn-primary"})>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th> Customer Name</th>
            <th> New Customer?</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>

            </tr>
        }
    </tbody>
</table>

