@model List<LawnPaynes.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<h2 class="text-center">@ViewBag.Title</h2>

<div class="d-flex justify-content-end">
    @Html.ActionLink("Add Customer", "Add", null, new { @class = "btn btn-primary " })
</div>

<table class="table table-striped text-center">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>New Customer</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                 @{ 
                     if (customer.IsNew)
                     {
                         <td class="text-center alert alert-danger">Yes</td>
                     }
                     else
                     {
                         <td class=" text-center alert alert-success">No</td>
                     }
                 }
                <td> @customer.PhoneNumber</td>
                <td>
                    @Html.ActionLink("Detail", "Detail", new { id = customer.Id }, new { @class = "btn btn-primary btn-xs margin-right" })
                    @Html.ActionLink("Edit", "Edit", new { id = customer.Id }, new { @class = "btn btn-primary btn-xs margin-right" })
                        <a data-toggle="modal" href="#deleteCustomerModal+@customer.Id" class="btn btn-danger btn-xs margin-right">Delete</a>
                        <div class="modal" id="deleteCustomerModal+@customer.Id" tabindex="-1" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    @using (Html.BeginForm("Delete", "Customer", new { id = customer.Id }))
                                    {
                                        <input type="hidden" value="@customer.Id" name="Id"/>
                                        <div class="modal-header">
                                            <h4 class="modal-title">Delete @customer.Name</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                                </button>
                                        </div>

                                        <div class="modal-body">
                                            Are you sure you want to delete @customer.Name? They cannot be restored to the Customer List.
                                        </div>

                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-danger">Delete Customer</button>
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel and Return to Customer List</button>
                                        </div>
                                     }
                                </div>
                            </div>
                        </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>

