@model  LawnPaynes.ViewModels.CustomerAddViewModel

@{ 
    ViewBag.Title = "Add Customer";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.Partial("_CustomerForm")

       <div class="row">
        <div class="col-md-12">
            <div class="pad-top">
                <button type="submit" class="btn btn-success btn-lg margin-right">
                    <span class="glyphicon glyphicon-save"></span> Save
                </button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger btn-lg margin-right" })
            </div>
        </div>
    </div>
}
